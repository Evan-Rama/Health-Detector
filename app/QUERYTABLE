CREATE TABLE patients (
    id SERIAL PRIMARY KEY,
    name TEXT,
    phone TEXT UNIQUE,
    email TEXT UNIQUE,
    height FLOAT,
    weight FLOAT,
    gender TEXT,
    age INT,
    age_category TEXT,
    race TEXT,
    smoking BOOLEAN,
    alcohol BOOLEAN,
    stroke BOOLEAN,
    diff_walking BOOLEAN,
    diabetic TEXT,
    physical_activity BOOLEAN,
    asthma BOOLEAN,
    kidney_disease BOOLEAN,
    skin_cancer BOOLEAN,
    general_health TEXT,
    sleep_time FLOAT,
    physical_health_days INT,
    mental_health_days INT,
    risk_prediction TEXT,
    risk_probability FLOAT
);